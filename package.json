{
    "name": "todo-monorepo",
    "private": true,
    "workspaces": [
        "todo-app",
        "todo-web"
    ],
    "scripts": {
        "start:all": "concurrently \"npm start --prefix todo-app\" \"npm run dev --prefix todo-web\"",
        "docker:up": "docker compose up --build",
        "docker:down": "docker compose down"
    },
    "devDependencies": {
        "concurrently": "^9.2.1"
    }
}